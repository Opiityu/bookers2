<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputOpinion" %>
  <%= f.submit "Update Book" %>
<% end %>

<div class="link">
  <span class="show-button"><%= link_to "Show", book_path(@book.id) %></span>
  <span>|</span>
  <span class="back-button"><%= link_to "Back", "/books" %></span>
</div>
  