<%= flash[:notice] %>

<div class="container">
  <div class="row">
    
  <div class="col-md-3">  
  <h3>User Info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>




  <div>
    <p>name：<%= @user.name %></p>
    <p>introduction：<%= @user.introduction %></p>

  </div>


<%= link_to edit_user_path(@user), class: "btn btn-block btn-outline-secondary" do %>
<i class="fa-solid fa-user-cog"></i>
<% end %>

<%#= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %>
<div>
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>

</div>


<div class="col-md-8 offset-md-1">
  
  <table class="table table-striped">
    <h2>Book detail</h2>
    

    <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %>
              <%= link_to @user.name, user_path(@user) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
    </tbody>
  </table>
  
</div>
  
  






</div>
</div>