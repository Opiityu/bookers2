<div>
  <h3>User Info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>



  <div>
    <p>name：<%= @user.name %></p>
    <p>introduction：<%= @user.introduction %></p>
 
  </div>


<%= link_to 'Edit', edit_user_path, class: "btn btn-success" %>

<div>
  <h2>New Book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
	
    <h4>Opinion</h4>
    <%= f.text_area :body %>
	
    <%= f.submit 'Create Book' %>
  <% end %>
</div>



<table class="table table-striped">
  <h2>Books</h2>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>