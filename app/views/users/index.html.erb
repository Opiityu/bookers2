<div>
  <h3>User Info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>



  <div>
    <p>name：<%= @user.name %></p>
    <p>introduction：<%= @user.introduction %></p>

  </div>


<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-success" %>



<div>
  <h2>New Book</h2>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>



<table class="table table-striped">
  <h2>Users</h2>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>