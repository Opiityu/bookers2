<table class="table table-striped">
  <h2>Users</h2>
  <thead>
    <tr>
      <th>name</th>
      <th>Introduction</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>