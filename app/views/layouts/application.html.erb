<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/e8eca068ae.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <!--変更 -->
          <%= link_to "Bookers", root_path, class: "navbar__brand navbar__mainLogo", class: 'nav-link text-white' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
  
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: 'nav-link text-white' do %>
                <i class="fa-solid fas fa-home"></i>Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-users"></i>Users
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-book-open"></i>Books
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-sign-out-alt"></i>Log out
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-home"></i>Home
              <% end %>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-link"></i>About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-user-plus"></i>Sign up
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_session_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-sign-in-alt"></i>Log in
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <main class="mb-auto">
    <%= yield %>
    </main>

  </body>
</html>
